<Window x:Class="MarchingSquares.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarchingSquares"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Black"
        KeyDown="Window_KeyDown"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="canvas"/>

        <DockPanel Grid.Row="1" LastChildFill="False" HorizontalAlignment="Center">
            <StackPanel Margin="10">
                <TextBlock Text="Resolution" Foreground="White"/>
                <Slider x:Name="name" Value="20"/>
            </StackPanel>
            <StackPanel Margin="10">
                <TextBlock Text="Hello World" Foreground="White"/>
                <Slider x:Name="name2" Value="20"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
